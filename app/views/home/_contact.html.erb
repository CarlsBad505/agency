<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Contact Me</h2>
            <h3 class="section-subheading text-muted-contact">Need help? Looking for advice? I'm available for hire, drop me a line!</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!--<form name="sentMessage" id="contactForm" novalidate>-->
                <div class="row">
                    <div class="col-md-6">
                      <%= form_for Message.new, remote: true do |f| %>
                      <% if Message.new.errors.any? %>
                      <ul>
                        <% Message.new.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                      </ul>
                      <% end %>
                        <div class="form-group">
                            <%= f.text_field :name, placeholder: "Your Name *", class: 'field' %> 
                            <!--<input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">-->
                            <!--<p class="help-block text-danger"></p>-->
                        </div>
                        <div class="form-group">
                            <%= f.text_field :email, placeholder: "Your Email *", class: 'field' %>
                            <!--<input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">-->
                            <!--<p class="help-block text-danger"></p>-->
                        </div>
                        <div class="form-group">
                            <%= f.text_field :phone, placeholder: "Your Phone Number *", class: 'field' %>
                            <!--<input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">-->
                            <!--<p class="help-block text-danger"></p>-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.text_area :content, placeholder: "Your Message *", class: 'field2' %>
                            <!--<textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>-->
                            <!--<p class="help-block text-danger"></p>-->
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 text-center">
                        <div id="success"></div>
                        <%= f.submit "Send Message", class: 'btn btn-xl' %>
                        <!--<button type="submit" class="btn btn-xl">Send Message</button>-->
                    </div>
                  <% end %>
                </div>
            <!--</form>-->
        </div>
    </div>
</div>