<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Contact Me</h2>
            <h3 class="section-subheading text-muted-contact">Need help? Looking for advice? I'm available for hire, drop me a line!</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
                <div class="row">
                  <%= simple_form_for @message, remote: true do |f| %>
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.input :name, placeholder: "Your Name *", class: 'field', error: "name is required", label: false %> 
                        </div>
                        <div class="form-group">
                            <%= f.input :email, placeholder: "Your Email *", class: 'field', error: @message.errors[:email], label: false %>
                        </div>
                        <div class="form-group">
                            <%= f.input :phone, placeholder: "Your Phone Number *", class: 'field', error: @message.errors[:phone], label: false %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.input :content, placeholder: "Your Message *", class: 'field2', error: @message.errors[:content], label: false %>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 text-center">
                        <div id="success"></div>
                        <%= f.button :submit, "Send Message", class: 'btn btn-xl unique' %>
                    </div>
                  <% end %>
              </div>
        </div>
    </div>
</div>